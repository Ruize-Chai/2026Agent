{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/workflow_schema.json",
  "title": "Workflow Schema",
  "type": "object",
  "required": ["version", "workflow_id", "entry", "nodes"],
  "additionalProperties": false,
  "properties": {
    "workflow_id": {
      "type": "string",
      "minLength": 1
    },
    "entry": {
      "type": "integer",
      "description": "Entry node id"
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/node" }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "definitions": {
    "node": {
      "type": "object",
      "required": ["id", "type", "inputs", "outputs", "params"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "integer",
          "description": "Node id"
        },
        "type": {
          "type": "string",
          "description": "Node type id"
        },
        "inputs": {
          "type": "array",
          "items": { "type": "integer" },
          "uniqueItems": true,
          "description": "Allowed incoming node ids"
        },
        "outputs": {
          "type": "array",
          "items": { "type": ["integer", "null"] },
          "uniqueItems": true,
          "description": "Outgoing node ids, null means end"
        },
        "params": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
